{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "allowJs": false,
      "baseUrl": "./",
      "module": "CommonJS",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noImplicitReturns": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "paths": {
        "@/*": ["src/*"],
        "*": [
            "node_modules/*"
        ]
      },
      "strictNullChecks": true,
  },
  "include": [
      "src/**/*",
  ],
  "exclude": [ "node_modules" ]
}